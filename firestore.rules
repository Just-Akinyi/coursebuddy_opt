rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSuperAdmin() {
      return request.auth != null && request.auth.token.roles.superadmin == true;
    }
    function isAdmin() {
      return request.auth != null && request.auth.token.roles.admin == true;
    }
    // âœ… NEW: Teacher function
    function isTeacher() {
      return request.auth != null && request.auth.token.roles.teacher == true;
    }

    // ðŸ”¹ USERS collection
    match /users/{uid} {
      allow create: if request.auth != null &&
        (request.auth.uid == uid || isAdmin() || isSuperAdmin());

      allow update: if request.auth != null &&
        (
          isAdmin() || isSuperAdmin()
          ||
          (request.auth.uid == uid
            && request.resource.data.keys().hasOnly([
              "xp", "level", "completedLessons"
            ]))
        );

      allow delete: if request.auth != null &&
        (isSuperAdmin() || (isAdmin() && request.auth.uid != uid));

      allow get, list: if request.auth != null;
    }

    // ðŸ”¹ LESSONS collection
    match /lessons/{docId} {
      // âœ… MODIFIED: Allow Teachers, Admins, or SuperAdmins to create lessons
      allow create: if (isTeacher() || isAdmin() || isSuperAdmin())
                    && request.resource.data.status == "waiting_approval"
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.courseId is string; // Ensure courseId is present

      // Allow Admin/SuperAdmin to read ALL lessons, otherwise only approved or user-created lessons.
      allow get, list: if isAdmin() || isSuperAdmin()
                        || (request.auth != null
                            && (resource.data.status == "approved"
                                || resource.data.createdBy == request.auth.uid));

      allow update: if isAdmin() || isSuperAdmin();
      allow delete: if isAdmin() || isSuperAdmin();
    }

    // ðŸ”¹ COURSES collection
    match /courses/{doc} {
      // Allow read for everyone to populate the dropdown
      allow read: if true; 
      allow write: if isAdmin() || isSuperAdmin();
    }

    // ðŸ”¹ ADMIN-only collection
    match /adminData/{docId} {
      allow read, write: if isAdmin() || isSuperAdmin();
    }

    // ðŸ”¹ Default for other collections
    match /{collection}/{document} {
      allow read: if request.auth != null;
      allow write: if isAdmin() || isSuperAdmin();
    }
  }
}